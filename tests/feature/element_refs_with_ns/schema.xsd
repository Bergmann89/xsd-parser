<?xml version="1.0" encoding="UTF-8"?>
<xs:schema
    xmlns="Foo"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:bar="Bar"
    xmlns:baz="Baz"
    xmlns:biz="Biz"
    targetNamespace="Foo">

    <xs:import namespace="Bar" schemaLocation="bar.xsd" />
    <xs:import namespace="Baz" schemaLocation="baz.xsd" />
    <xs:import namespace="Biz" schemaLocation="biz.xsd" />

    <xs:element name="Outer">
        <xs:complexType>
            <xs:choice>
                <xs:element ref="bar:Inner" />
                <xs:element ref="baz:Inner" />
                <xs:element ref="biz:Inner" />
            </xs:choice>
        </xs:complexType>
    </xs:element>
</xs:schema>
